<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.hosts') %></h1>

<%= content_tag :table, role: :datatable,
      id: 'hosts_table',
      class: "table table-bordered table-striped remoteDataTable",
      data: {
        url: hosts_path(format: :json),
        order: [[0, 'desc']].to_json
      } do %>

  <thead>
    <tr>
      <th><%= t('attributes.name') %></th>
      <th><%= t('attributes.description') %></th>
      <th><%= t('attributes.ip') %></th>
      <th><%= t('attributes.cpe') %></th>
      <th><%= t('attributes.raw_os') %></th>
      <th><%= t('attributes.fqdn') %></th>
      <th><%= t('attributes.domain_dns') %></th>
      <th><%= t('attributes.workgroup') %></th>
      <th><%= t('attributes.lastseen') %></th>
      <th><%= t('attributes.mac') %></th>
      <th><%= t('attributes.vendor') %></th>
      <th><%= t('attributes.host_category') %></th>
      <th><%= t('attributes.location') %></th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th></th>
