<%= form_tag search_hosts_path, role: "form",
    class: 'form-horizontal well' do %>

    <legend><%= t('boskop.search_hosts') %></legend>

    <div class="form-group">
      <label for="ip" class="col-sm-2 control-label"><%=t('attributes.ip')%></label>
      <div class="col-sm-10">
        <input class="form-control" id="ip" name="ip" placeholder="IP address or CIDR network">
      </div>
    </div>

    <div class="form-group">
      <label for="name" class="col-sm-2 control-label"><%=t('attributes.name')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="name" id="name" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="description" class="col-sm-2 control-label"><%=t('attributes.description')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="description" id="description" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="operating_system" class="col-sm-2 control-label"><%=t('attributes.operating_system')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="operating_system" id="operating_system" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="cpe" class="col-sm-2 control-label"><%=t('attributes.cpe')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="cpe" id="cpe" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="raw_os" class="col-sm-2 control-label"><%=t('attributes.raw_os')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="raw_os" id="raw_os" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="mac" class="col-sm-2 control-label"><%=t('attributes.mac')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="mac" id="mac" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="fqdn" class="col-sm-2 control-label"><%=t('attributes.fqdn')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="fqdn" id="fqdn" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="domain_dns" class="col-sm-2 control-label"><%=t('attributes.domain_dns')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="domain_dns" id="domain_dns" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="workgroup" class="col-sm-2 control-label"><%=t('attributes.workgroup')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="workgroup" id="workgroup" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="vendor" class="col-sm-2 control-label"><%=t('attributes.vendor')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="vendor" id="vendor" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="newer" class="col-sm-2 control-label"><%=t('attributes.newer')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="newer" id="newer" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="older" class="col-sm-2 control-label"><%=t('attributes.older')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="older" id="older" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="host_category" class="col-sm-2 control-label"><%=t('attributes.host_category')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="host_category" id="host_category" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="lid" class="col-sm-2 control-label"><%=t('attributes.lid')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="lid" id="lid" placeholder="">
      </div>
    </div>

    <div class="form-group">
      <label for="limit" class="col-sm-2 control-label"><%=t('attributes.limit')%></label>
      <div class="col-sm-10">
        <input class="form-control" name="limit" id="limit" value="100" placeholder="">
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= submit_tag(t('boskop.search_hosts'), class: 'btn btn-primary') %>
        <%= cancel_button %>
      </div>
    </div>
<% end %>
