<div class="container">
  <%= simple_form_for(@network,
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.input :netzwerk, as: :string,
            input_html: {value: @network.to_str}
       %>
      <%= f.input :description
       %>
      <%= f.association :location,
            label_method: :to_str,
            input_html: { class: 'select2' }
       %>
    </div>

    <div class="card-header">
      <%= I18n.t('controller.merkmale') %>
    </div>
    <div class="card-body">
      <%= render 'merkmale/merkmal_form', f: f, merkmale: @network.merkmale %>
    </div>

    <div class="card-body">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
