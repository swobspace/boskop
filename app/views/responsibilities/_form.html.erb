<div class="container">
  <%= simple_form_for(@responsibility,
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.input :responsibility_for_type, as: :hidden,
                   input_html: { value: 'Location'} 
         %>
      <%= f.input :responsibility_for_id, collection: Location.current,
                  label_method: :to_s
	 %>
      <%= f.association :contact, label_method: :to_s
	 %>
      <%= f.input :role, collection: Boskop.responsibility_role
	 %>
      <%= f.input :title
	 %>
      <%= f.input :position
	 %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
