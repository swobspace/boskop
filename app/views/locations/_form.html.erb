<div class="container">
  <%= simple_form_for(@location,
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">

      <%= f.input :name
       %>
      <%= f.input :lid
       %>
      <%= f.input :description
       %>
      <%= f.input :disabled
       %>
    </div>

    <div class="card-header">
      <%= I18n.t('controller.merkmale') %>
    </div>
    <div class="card-body">
      <%= render 'merkmale/merkmal_form', f: f, merkmale: @location.merkmale %>
    </div>


    <div class="card-header">
      <%= I18n.t('controller.addresses') %>
    </div>
    <div class="card-body">
      <%= f.simple_fields_for :addresses, @location.addresses do |addr| %>
	<%= addr.input :streetaddress
	 %>
	<%= addr.input :plz
	 %>
	<%= addr.input :ort
	 %>
	<%= addr.input :_destroy, as: :boolean, label: t('actions.destroy') %>
      <% end %>
    </div>

    <div class="card-body">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
