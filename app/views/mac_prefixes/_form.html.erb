<div class="container">
  <%= simple_form_for(@mac_prefix,
    html: { class: 'form-horizontal card' } ) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>

    <div class="card-body">
      <%= f.input :oui
       %>
      <%= f.input :vendor
       %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
