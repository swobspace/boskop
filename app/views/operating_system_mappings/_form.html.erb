<div class="container">
  <%= simple_form_for(@operating_system_mapping,
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>  
    <div class="card-body">

      <%= f.input :field
       %>
      <%= f.input :value
       %>
      <%= f.association :operating_system
       %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
