<div class="card">
  <div class="card-header">
    <h2>
      <%= t('attributes.line_state') %>:
      <%= @line_state.name %>
    </h2>
  </div>
  <div class="card-body">
    <table class="table table-hover">
      <tr>
	<th><%= t('attributes.description')%>:</th>
	<td class="w-100"><%= @line_state.description %></td>
      </tr>
      <tr>
	<th><%= t('attributes.active')%>:</th>
	<td><%= @line_state.active %></td>
      </tr>
    </table>

    <div role="toolbar">
      <%= back_link %>
      <%= edit_link(@line_state) %>
      <%= delete_link(@line_state) %>
      <%= new_link LineState %>
    </div>
  </div>
</div>
