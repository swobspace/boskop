<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.host_categories') %></h1>

<div data-controller="datatables">
  <table id="host_categories" class="table table-bordered">
  <thead>
    <tr>
      <th><%= t('attributes.name') %></th>
      <th><%= t('attributes.tag') %></th>
      <th><%= t('attributes.description') %></th>
      <th class="nosort"></th>
    </tr>
  </thead>
  <tfoot class="search">
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th class="nosearch"></th>
    </tr>
  </tfoot>
  <tbody>

  <% @host_categories.each do |host_category| %>
    <%= content_tag_for(:tr, host_category) do %>
      <td><%= host_category.name %></td>
      <td><%= host_category.tag %></td>
      <td><%= host_category.description %></td>
      <td class="nowrap">
        <%= show_link host_category %>
        <%= edit_link host_category %>
        <%= delete_link host_category %>
      </td>
    <% end %>
  <% end %>
  </tbody>
  </table>
</div>

<br />

<%= back_link %>
<%= new_link HostCategory %>
