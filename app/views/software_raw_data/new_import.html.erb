<div class="container">
  <%= form_tag(import_software_raw_data_path, role: "form",
        multipart: true,
        class: 'form-horizontal card') do |f| %>

    <div class="card-header">
      <legend class="offset-sm-2 col-sm-10"><%= t('boskop.import_software_raw_data_file') %></legend>
    </div>
    <div class="card-body">


      <div class="form-group row">
	<label for="file" class="col-sm-2 col-form-label">
	  <%= t('attributes.file') %>
	</label>
	<div class="col-sm-9">
	  <input type="file" class="form-control" id="file" name="file" 
		 placeholder="<%= t('boskop.import_software_raw_data_file') %>">
	</div>
      </div>

      <div class="form-group row">
	<label for="source" class="col-sm-2 col-form-label">
	  <%= t('attributes.source') %>
	</label>
	<div class="col-sm-9">
	  <select type="text" class="form-control" id="source" name="source">
	    <%= options_for_select([["Docusnap", "docusnap"]]) %>
	  </select>
	</div>
      </div>

     <div class="form-group form-row">
        <label for="lastseen" class="col-sm-2 col-form-label"><%=t('attributes.lastseen')%></label>
        <div class="input-group col-sm-3">
          <input class="form-control datepicker" name="lastseen" id="lastseen" autocomplete="off" placeholder="<%= t('attributes.lastseen')%>">
          <div class="input-group-append">
            <i class="input-group-text fas fa-calendar-alt fa-2x"></i>
          </div>
        </div>
      </div>


      <div class="form-group row">
	<div class="offset-sm-2 col-sm-9">
	  <button type="submit" class="btn btn-primary"><%= t('actions.upload') %></button>

	  <%= cancel_button %>
	</div>
      </div>
    </div>
  <% end %>
</div>
