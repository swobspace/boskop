<div class="container">
  <%= form_tag(import_software_raw_data_path, role: "form",
        multipart: true,
        class: 'form-horizontal card') do |f| %>

    <div class="card-header">
      <legend class="offset-sm-2 col-sm-10"><%= t('boskop.import_software_raw_data_file') %></legend>
    </div>
    <div class="card-body">


      <div class="row mb-3">
	<label for="file" class="col-sm-2 col-form-label">
	  <%= t('attributes.file') %>
	</label>
	<div class="col-sm-9">
	  <input type="file" class="form-control" id="file" name="file" 
		 placeholder="<%= t('boskop.import_software_raw_data_file') %>">
	</div>
      </div>

      <div class="row mb-3">
	<label for="source" class="col-sm-2 col-form-label">
	  <%= t('attributes.source') %>
	</label>
	<div class="col-sm-9">
	  <select type="text" class="form-control" id="source" name="source">
	    <%= options_for_select([["Docusnap", "docusnap"]]) %>
	  </select>
	</div>
      </div>

     <div class="row mb-3">
        <label for="lastseen" class="col-sm-2 col-form-label"><%=t('attributes.lastseen')%></label>
        <div class="col-sm-3">
          <input class="form-control" type="date" name="lastseen" id="lastseen" autocomplete="off" placeholder="<%= t('attributes.lastseen')%>">
        </div>
      </div>

      <div class="row mb-3">
        <div class="offset-sm-2 col-sm-10">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="recent_only" id="recent_only" value="1" checked>
            <label class="form-check-label" for="recent_only">
              <%= t('attributes.recent_only') %>
            </label>
          </div>
        </div>
      </div> 

      <div class="row mb-3">
	<div class="offset-sm-2 col-sm-9">
	  <button type="submit" class="btn btn-primary"><%= t('actions.upload') %></button>

	  <%= cancel_button %>
	</div>
      </div>
    </div>
  <% end %>
</div>
