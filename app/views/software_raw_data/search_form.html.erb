<div class="container">
  <%= form_tag(search_software_raw_data_path, role: "form",
        class: 'form-horizontal card') do |f| %>

    <div class="card-header">
      <legend class="offset-sm-2 col-sm-10"><%= t('boskop.search_software_raw_data') %></legend>
    </div>
    <div class="card-body">

      <div class="form-group row">
	<label for="name" class="col-sm-2 col-form-label">
          <%=t('attributes.name')%>
        </label>
	<div class="col-sm-10">
	  <input class="form-control" name="name" id="name" placeholder="">
	</div>
      </div>

      <div class="form-group row">
	<label for="vendor" class="col-sm-2 col-form-label">
          <%=t('attributes.vendor')%>
        </label>
	<div class="col-sm-10">
	  <input class="form-control" name="vendor" id="vendor" placeholder="">
	</div>
      </div>


      <div class="form-group row">
	<label for="operating_system" class="col-sm-2 col-form-label">
          <%=t('attributes.operating_system')%>
        </label>
	<div class="col-sm-10">
	  <input class="form-control" name="operating_system" id="operating_system" 
                 placeholder="Windows, Linux, ...">
	</div>
      </div>

      <div class="form-group form-row">
	<label for="lastseen" class="col-sm-2 col-form-label"><%=t('attributes.lastseen')%></label>
	<div class="input-group col-sm-3">
          <div class="input-group-prepend">
            <div class="input-group-text">&geq;</div>
          </div>
	  <input class="form-control datepicker" name="newer" id="newer" autocomplete="off" placeholder="<%= t('attributes.newer')%>">
        </div>
	<div class="input-group col-sm-3">
          <div class="input-group-prepend">
            <div class="input-group-text">&leq;</div>
          </div>
	  <input class="form-control datepicker" name="older" id="older" autocomplete="off" placeholder="<%= t('attributes.older')%>">
	</div>
      </div>

      <% if false %>
      <div class="form-group form-row">
        <label for="created_at" class="col-sm-2 col-form-label">
          <%=t('attributes.created_at')%>
        </label>
        <div class="input-group col-sm-3">
          <div class="input-group-prepend">
            <div class="input-group-text">&geq;</div>
          </div>
          <input class="form-control datepicker" name="created_newer" 
                 id="created_newer" autocomplete="off" 
                 placeholder="<%= t('attributes.created_newer')%>">
        </div>
        <div class="input-group col-sm-3">
          <div class="input-group-prepend">
            <div class="input-group-text">&leq;</div>
          </div>
          <input class="form-control datepicker" name="created_older" 
                 id="created_older" autocomplete="off" 
                 placeholder="<%= t('attributes.created_older')%>">
        </div>
      </div>
      <%end%>

      <div class="form-group row">
        <label for="software_id" class="col-sm-2 col-form-label"><%=t('attributes.software')%></label>
        <div class="col-sm-10">
          <%= select_tag "software_id",
                options_from_collection_for_select(Software.all, 'id', 'to_s'),
                include_blank: true,
                class: 'form-control select2'
           %>
        </div>
      </div>


      <div class="form-group row">
	<div class="offset-sm-2 col-sm-10">
	  <div class="form-check form-check-inline">
	    <input class="form-check-input" type="checkbox" 
                   id="use_pattern" name="use_pattern">
	    <label class="form-check-label" for="use_pattern">
	      <%=t('attributes.use_pattern')%>
	    </label>
	  </div>
	</div>
      </div>

      <div class="form-group row">
	<label for="limit" class="col-sm-2 col-form-label"><%=t('attributes.limit')%></label>
	<div class="col-sm-10">
	  <input class="form-control" name="limit" id="limit" value="1000" placeholder="">
	</div>
      </div>

      <div class="form-group row">
	<div class="col-sm-10 offset-sm-2">
	  <%= submit_tag(t('boskop.search_software_raw_data'),
                class: 'btn btn-primary') %>
          <% if false # can? :csv, Host %>
	    <%= submit_tag(t('boskop.csv_export'),
                  name: 'commit', class: 'btn btn-primary',
                  formaction: search_hosts_path(format: :csv)) %>
          <% end %>
	  <%= cancel_button %>
	</div>
      </div>
    </div>
  <% end %>
</div>
