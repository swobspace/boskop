<% if @filter_info %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <span> 
    <%= link_to("#{t('boskop.applied_filter')}:",
          url_for({
            only_path: 'false',
            controller: controller.controller_name,
            action: controller.action_name}.merge(@filter_info))
      )%>
   </span>
  <% @filter_info.map do |key,value| %>
    <%= content_tag(:span, "#{begin t('attributes.' + key.to_s) rescue key.to_s end} = #{value}; ") %>
  <% end %>
</div>
<% end %>
