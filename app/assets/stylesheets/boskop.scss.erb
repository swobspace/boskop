$icon-font-path: "bootstrap-sass/assets/fonts/bootstrap/";
@import "bootstrap-sass/assets/stylesheets/bootstrap-sprockets";
@import "bootstrap-sass/assets/stylesheets/bootstrap";
@import "wobapphelpers/breadcrumbs";
@import "common";

body {
  padding-top: 50px;
}

// --- FOOTER
div#footer{
  font-size: 0.9em;
  color: #999;
  margin: 24px 0 0 0;
  padding: 4px 0 0 0;
  border-top: 1px solid #eee;
}

// --- cell states

tr td {
  &.CRITICAL {background-color: #FAA !important;}
  &.WARNING  {background-color: #FF9 !important;}
  &.OK       {background-color: #FF9 !important;}
}

.autowidth { width: auto; }
.width25 { width: 25%; }
.width50 { width: 50%; }

// --- dataTable

table.dataTable.no-footer {
  border-bottom: 1px solid #ddd;
}
div#dataTable_paginate>ul {
  li.paginate_button {
    padding-left: 0px;
    padding-right: 0px;
  }
}

.bs-subform:before {
  font-size: 12px;
  font-weight: 700;
  color: #959595;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.bs-subform {
  background-color: #f8f8f8;
  background-image: none;
}

.bs-merkmale:before {
  content: "<%= I18n.t('controller.merkmale') %>" ;
}
.bs-addresses:before {
  content: "<%= I18n.t('controller.addresses') %>" ;
}
.bs-optional:before {
  content: "<%= I18n.t('actions.optional') %>" ;
}
.bs-mandantory:before {
  content: "<%= I18n.t('actions.mandantory') %>" ;
}

tfoot {
  display: table-header-group;
  input {
    width: 100%;
    padding: 3px;
    box-sizing: border-box;
  }
}

.turbolinks-progress-bar {
  height: 5px;
  background-color: #008000;
}

dl {  
  dt {
    font-weight: bold;
    text-decoration: underline;
  }
  dd {
    margin: 0;
    padding: 0 0 0.5em 0em;
  }
}
