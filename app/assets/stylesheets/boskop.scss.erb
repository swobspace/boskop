@import "font-awesome-sprockets";
@import "font-awesome";
@import "v4-shims.min";

// --- colors
$custom: #197282;
$customgrey: #E6F2F1;
$colors: (
  "blue": $custom
);
$theme-colors: (
  "primary": $custom,
  "secondary": $customgrey,
  "custom": $custom
);

@import "custom-colors";

@import "bootstrap/scss/bootstrap";
@import "wobapphelpers/breadcrumbs";
@import "common";

body {
  padding-top: 60px;
}

// --- FOOTER
div#footer{
  font-size: 0.9em;
  color: #999;
  margin-top: 24px;
  padding-top: 4px;
  border-top: 1px solid #eee;
}

.table {
  tfoot {
    display: table-header-group;
    th {
      padding: 0.25rem;
      input[type="text"] {
        width: 100%;
        padding: 0.25rem;
        border-radius: 0.25rem;
        box-sizing: border-box;
        border: 1px solid #ced4da;
      }
    }
  }
}

.turbolinks-progress-bar {
  height: 5px;
  background-color: white;
}

// --- cell states

tr td {
  &.CRITICAL {background-color: #FAA !important;}
  &.WARNING  {background-color: #FF9 !important;}
  &.OK       {background-color: #FF9 !important;}
}

.autowidth { width: auto; }
.width25 { width: 25%; }
.width50 { width: 50%; }

.bs-subform:before {
  font-size: 12px;
  font-weight: 700;
  color: #959595;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.bs-subform {
  background-color: #f8f8f8;
  background-image: none;
}

.bs-merkmale:before {
  content: "<%= I18n.t('controller.merkmale') %>" ;
}
.bs-addresses:before {
  content: "<%= I18n.t('controller.addresses') %>" ;
}
.bs-optional:before {
  content: "<%= I18n.t('actions.optional') %>" ;
}
.bs-mandantory:before {
  content: "<%= I18n.t('actions.mandantory') %>" ;
}

dl {  
  dt {
    font-weight: bold;
    text-decoration: underline;
  }
  dd {
    margin: 0;
    padding: 0 0 0.5em 0em;
  }
}
