$.extend $.fn.dataTableExt.oStdClasses,
  sWrapper: "dataTables_wrapper form-inline"

ready = ->
  $('.dataTable tfoot th').each  (idx) ->
    title = $('.dataTable thead th').eq( $(this).index() ).text()
    $(this).html( '<input type="text" placeholder="<%= I18n.t('boskop.search') %>" name="idx'+idx+'" />' )

  table = $(".dataTable").DataTable(
    pagingType: "full_numbers"
    sDom: "<'row'<'col-md-3'l><'col-md-5 btn-group'TC><'col-md-4'f>>t<'row'<'col-md-6'ir><'col-md-6'p>>"
    colVis:
      buttonText: "<%= I18n.t('boskop.change_columns') %>"
      showAll: "<%= I18n.t('boskop.show_all') %>"
    bJQueryUI: false
    bStateSave: true
    # fnStateLoadCallback: (oSettings,oData) ->
    #   oData.sFilter = ""
    #   return true
    oLanguage:
      sUrl: "<%= asset_path('dataTable.german.txt') %>"
    oTableTools:
      sSwfPath: "<%= asset_path(Rails.root + '/swf/copy_csv_xls.swf')%>"
      aButtons: [
        { sExtends: "xls", sButtonClass: "btn visible-desktop" }
        { sExtends: "copy", sButtonClass: "btn visible-desktop" }
        { sExtends: "print", sButtonClass: "btn visible-desktop", "bShowAll": false }
      ]
    fnDrawCallback: (oSettings) ->
      $("table tbody tr").on "click", "td.td_link_from_a", (event) ->
        link = $(this).find('a').attr('href')
        if link?
          window.location.href = link
  )


  if $('.dataTable').length
    table.columns().eq(0).each (colIdx) ->
      $('input[name=idx'+colIdx+']').on( 'keyup change', ->
        table.column(colIdx).search(this.value).draw()
      )

  if table.length
    $('input[type=text]').val("")
    table.columns().search('').draw()

  $("#reset_search").on("click",  ->
    $('input[type=text]').val("")
    table.columns().search('').draw()
    $('input[type=search]').val("").trigger('input')
  )

$(document).ready(ready)
$(document).on('page:load', ready)
